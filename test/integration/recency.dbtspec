target:
  type: teradata
  server: "{{ env_var('DBT_TERADATA_SERVER_NAME', 'localhost') }}"
  username: "{{ env_var('DBT_TERADATA_USERNAME', 'dbc') }}"
  password: "{{ env_var('DBT_TERADATA_PASSWORD', 'dbc') }}"
  schema: "dbt_test_{{ var('_dbt_random_suffix') }}"
  tmode: ANSI
  log: "0"

projects:
  - name: project_for_check_passes
    paths:
      dbt_project.yml: |
        name: 'project_for_check_passes'
        version: '1.0.0'
        config-version: 2
        dispatch:
          - macro_namespace: dbt_utils
            search_order:
              - teradata_utils
              - dbt_utils

      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0
        - local: "{{ env_var('DBT_TERADATA_UTILS_ROOT') }}"

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            tests:
              - dbt_utils.recency:
                  datepart: day
                  field: created_at
                  interval: 1

      seeds/test_table1.csv: |
        id,created_at
        1,2032-01-13
        2,2032-01-13
        3,2032-01-13

  - name: project_for_check_fails
    paths:
      dbt_project.yml: |
        name: 'project_for_check_fails'
        version: '1.0.0'
        config-version: 2
        dispatch:
          - macro_namespace: dbt_utils
            search_order:
              - teradata_utils
              - dbt_utils

      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0
        - local: "{{ env_var('DBT_TERADATA_UTILS_ROOT') }}"

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            tests:
              - dbt_utils.recency:
                  datepart: day
                  field: created_at
                  interval: 1

      seeds/test_table1.csv: |
        id,created_at
        1,2012-01-13
        2,2012-01-13
        3,2012-01-13

sequences:
  test_check_passes:
    project: project_for_check_passes
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: seed
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_recency_test_table1_day__created_at__1
        attributes:
          dbt_utils_recency_test_table1_day__created_at__1.status: pass

  test_check_fails:
    project: project_for_check_fails
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: seed
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
        check: false
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_recency_test_table1_day__created_at__1
        attributes:
          dbt_utils_recency_test_table1_day__created_at__1.status: fail
