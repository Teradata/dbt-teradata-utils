target:
  type: teradata
  server: "{{ env_var('DBT_TERADATA_SERVER_NAME', 'localhost') }}"
  username: "{{ env_var('DBT_TERADATA_USERNAME', 'dbc') }}"
  password: "{{ env_var('DBT_TERADATA_PASSWORD', 'dbc') }}"
  schema: "dbt_test_{{ var('_dbt_random_suffix') }}"
  tmode: ANSI
  log: "0"

projects:
  - name: project_for_check_passes
    paths:
      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            columns:
              - name: attrA
                tests:
                  - dbt_utils.cardinality_equality:
                      field: attrAA
                      to: ref('test_table2')

      seeds/test_table1.csv: |
        id,attrA,attrB
        1,val1A,val1B
        2,val2A,val2B
        2,val2A,val2B
        3,val3A,val3B
        3,val3A,val3B
        3,val3A,val3B
        4,val4A,val4B
        4,val4A,val4B
        4,val4A,val4B
        4,val4A,val4B

      seeds/test_table2.csv: |
        id,attrAA,attrB
        1,val1A,val1BA
        2,val2A,val2BB
        2,val2A,val2BC
        3,val3A,val3BD
        3,val3A,val3BE
        3,val3A,val3BF
        4,val4A,val4BG
        4,val4A,val4BH
        4,val4A,val4BI
        4,val4A,val4BJ

  - name: project_for_check_fails
    paths:
      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            columns:
              - name: attrA
                tests:
                  - dbt_utils.cardinality_equality:
                      field: attrB
                      to: ref('test_table2')

      seeds/test_table1.csv: |
        id,attrA,attrB
        1,val1A,val1B
        2,val2A,val2B
        3,val3A,val3B
        4,val4A,val3B

      seeds/test_table2.csv: |
        id,attrA,attrB
        1,val1A,val2B
        2,val2A,val2B
        3,val3A,val3B

sequences:

  test_check_passes:
    project: project_for_check_passes
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: seed
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_cardinality_equality_test_table1_attrA__attrAA__ref_test_table2_
        attributes:
          dbt_utils_cardinality_equality_test_table1_attrA__attrAA__ref_test_table2_.status: pass

  test_check_fails:
    project: project_for_check_fails
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: seed
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
        check: false
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_cardinality_equality_test_table1_attrA__attrB__ref_test_table2_
        attributes:
          dbt_utils_cardinality_equality_test_table1_attrA__attrB__ref_test_table2_.status: fail
