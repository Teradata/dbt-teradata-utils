target:
  type: teradata
  server: "{{ env_var('DBT_TERADATA_SERVER_NAME', 'localhost') }}"
  username: "{{ env_var('DBT_TERADATA_USERNAME', 'dbc') }}"
  password: "{{ env_var('DBT_TERADATA_PASSWORD', 'dbc') }}"
  schema: "dbt_test_{{ var('_dbt_random_suffix') }}"
  tmode: ANSI
  log: "0"

projects:
  - name: project_for_check_passes
    paths:
      dbt_project.yml: |
        name: 'project_for_check_passes'
        version: '1.0.0'
        config-version: 2
        dispatch:
          - macro_namespace: dbt_utils
            search_order:
              - teradata_utils
              - dbt_utils

      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0
        - local: "{{ env_var('DBT_TERADATA_UTILS_ROOT') }}"

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            columns:
              - name: InfoKey
                tests:
                  - dbt_utils.not_constant

      models/test_table1.sql: |
        {{
          config(
            materialized="table"
          )
        }}
        select * from dbc.dbcinfo

  - name: project_for_check_fails
    paths:
      dbt_project.yml: |
        name: 'project_for_check_fails'
        version: '1.0.0'
        config-version: 2
        dispatch:
          - macro_namespace: dbt_utils
            search_order:
              - teradata_utils
              - dbt_utils

      packages.yml: |
        packages:
        - package: dbt-labs/dbt_utils
          version: 0.8.0
        - local: "{{ env_var('DBT_TERADATA_UTILS_ROOT') }}"

      models/schema.yml: |
        version: 2
        models:
          - name: test_table1
            columns:
              - name: constant_column
                tests:
                  - dbt_utils.not_constant

      models/test_table1.sql: |
        {{
          config(
            materialized="table"
          )
        }}
        select InfoKey, 'test' as constant_column from dbc.dbcinfo

sequences:
  test_check_passes:
    project: project_for_check_passes
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: run
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_not_constant_test_table1_InfoKey
        attributes:
          dbt_utils_not_constant_test_table1_InfoKey.status: pass

  test_check_fails:
    project: project_for_check_fails
    sequence:
      - type: dbt
        cmd: deps
      - type: dbt
        cmd: run
      - type: run_results
        exists: True
      - type: dbt
        cmd: test
        check: false
      - type: run_results
        exists: True
        length: 1
        names:
          - dbt_utils_not_constant_test_table1_constant_column
        attributes:
          dbt_utils_not_constant_test_table1_constant_column.status: fail
